<div class="container">

    <h3 class=><% @member.each do |u| %>
     <% if u != current_user %>
     <%= u.name %> さんとのチャット
     <% end %><% end %>
    </h3>

    <div class="message mt-4">
     <% @messages.each do |m| %>
      <%= m.message %><br>
     <% end %>
    </div>

    <%= form_with url: dm_dm_messages_path(dm_id: @dm.id), local:true do |f| %>

      <div class="form-group">
        <label for="message"></label>
        <%= f.text_field :message, autofocus: true %>
      </div>

    <% end %>

    <div class="mt-5">部屋番号：<%= @dm.id %></div>

</div>